<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_playlists"
    android:id="@+id/tab1_container">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:id="@+id/linearLayout"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
      android:layout_width="190dp"
      android:layout_height="95dp"
      android:layout_above="@+id/playList"
      android:layout_alignParentEnd="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:orientation="vertical"
      android:weightSum="1">

      <TextView
        android:id="@+id/songsFromSDCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textColor="@color/global_color_primary_light"
        android:textSize="20sp"></TextView>

      <TextView
        android:id="@+id/totalSongsFromSDCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songsFromSDCard"
        android:paddingLeft="5dp"
        android:textColor="@color/global_color_primary_light"
        android:textSize="15sp"></TextView>


    </LinearLayout>

    <Button
      android:id="@+id/btnCreatePlist"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity=""
      android:layout_marginTop="40dp"
      android:text="Create Playlist"
      android:textColor="@color/colorBar" />
  </LinearLayout>


  <ListView
    android:id="@+id/playList"
    android:layout_width="477dp"
    android:layout_height="326dp"
    android:choiceMode="singleChoice"
    android:divider="#242424"
    android:dividerHeight="0.5dp"
    android:listSelector="@color/colorBar"
    android:paddingTop="20dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

  <TextView
    android:id="@+id/Playlists"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/linearLayout"
    android:text="Playlists"
    android:textColor="@color/global_color_primary_light"
    android:textSize="20sp" />


</RelativeLayout>
